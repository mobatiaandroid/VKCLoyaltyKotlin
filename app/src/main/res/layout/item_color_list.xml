<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_marginRight="3dp">

    <ImageView
        android:id="@+id/imgColor"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/colorPrimaryDark"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <com.vkc.loyaltyapp.manager.CustomTextViewBlack
        android:id="@+id/txtColorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="GRY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/imgColor"
        app:layout_constraintRight_toRightOf="@+id/imgColor"
        app:layout_constraintTop_toBottomOf="@+id/imgColor"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>